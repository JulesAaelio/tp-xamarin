<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpXamarin.Views.SplashScreen.SplashScreenView"
             x:Name="SplashScreen"
             >

    <ContentPage.Content >
            <Frame HasShadow="False" WidthRequest="200" HeightRequest="200" CornerRadius="100" VerticalOptions="Center" HorizontalOptions="Center">
                <Image Source="{Binding AvatarImageAddress}" Aspect="AspectFill" ></Image>
            </Frame>
    </ContentPage.Content>
</ContentPage>