<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpXamarin.Views.ArticleDetail.ArticleDetailView" Title="{Binding Article.Title}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding FullIllustrationAddress}"></Image>
            <Label StyleClass="view-title" Text="{Binding Article.Title}" HorizontalOptions="CenterAndExpand" />
            <WebView Source="{Binding ContentWebViewSource}" VerticalOptions="FillAndExpand"></WebView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>